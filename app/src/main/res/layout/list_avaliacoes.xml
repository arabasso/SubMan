<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_view_item_padding">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_avaliacoes_tipo_text_view"
            android:text="0" />

        <TextView
            android:text="P1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_avaliacoes_descricao_text_view"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_avaliacoes_data_text_view"
                android:text="dd/MM/yyyy"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:text="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_avaliacoes_peso_text_view" />
        </LinearLayout>

        <TextView
            android:text="8.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_avaliacoes_nota_text_view"
            android:layout_weight="0.5"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </LinearLayout>

</LinearLayout>